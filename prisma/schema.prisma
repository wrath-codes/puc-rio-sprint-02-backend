// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        String @id @default(uuid())
  name      String
  last_name String
  email     String @unique
  phone     String @unique

  adderss Address?
  orders  Order[]

  @@map("clients")
}

model Address {
  id       String @id @default(uuid())
  street   String
  number   String
  district String
  city     String
  zipcode  String

  client_id String @unique
  client    Client @relation(fields: [client_id], references: [id], onDelete: Cascade)

  @@map("addresses")
}

enum DishType {
  MEAT
  CHICKEN
  VEGETARIAN
}

model Dish {
  id          String   @id @default(uuid())
  title       String
  description String
  kind        DishType

  menu    Menu?   @relation(fields: [menu_id], references: [id])
  menu_id String?

  dish_order DishOrder[]

  @@map("dishes")
}

model Menu {
  id     String @id @default(uuid())
  dishes Dish[]

  created_at DateTime @default(now())

  @@map("menus")
}

model DishOrder {
  id       String @id @default(uuid())
  quantity Int

  dish_id String
  dish    Dish   @relation(fields: [dish_id], references: [id])

  order_id String
  order    Order  @relation(fields: [order_id], references: [id])

  @@map("dishes_orders")
}

model Order {
  id        String @id @default(uuid())
  client_id String
  client    Client @relation(fields: [client_id], references: [id])

  dishes DishOrder[]

  note     String?
  delivery Boolean

  total      Int
  created_at DateTime @default(now())

  @@map("orders")
}
